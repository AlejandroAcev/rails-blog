<h1>Articles#show</h1>


<div class="row">
	<div class="col-12">
		<div class="">
			<div class="container">
				<div class="row">
					<% if user_signed_in? %>
						<div class="col-12 text-right mt-auto">
							<%= link_to '<i class="fas fa-prencil-alt"></i>'.html_safe, edit_article_path(@article) %>
							<%= link_to @article, method: :delete, data: { confirm: "¿Estás seguro de que desea eliminar este articulo?" } do %>
								<i class="fas fa-trash-alt"></i>
							<% end %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">

		<div class="col-lg-3 col-md-8 mx-auto">
			<i><b>Autor:</b> <%= current_user.email %></i>
		</div>

		<div class="col-lg-9 col-md-10 mx-auto">
			<p><%= (raw @article.body) %></p>
		</div>

	</div>
</div>