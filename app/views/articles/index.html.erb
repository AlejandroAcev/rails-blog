<span class="position-absolute back-button"><%= link_to '<i class="fas fa-angle-left"></i> Volver'.html_safe, articles_path %></span>

<div class="row">
	<div class="col-10">
		<h1 class="article-title">Listado de Art√≠culos</h1>
	</div>
	<div class="col-2 align-self-center">
		<%= link_to 'Crear', new_article_path, class: "btn btn-primary" %>
	</div>
</div>


<div class="content">
	<div class="row">
		<% @articles.each do |article| %>
			<div class="col-lg-8 col-md-10 mx-auto p-2">
				<div class="card">
					<div class="card-title h3 pl-3 pt-3"><%= link_to article.title, article %></div>
					<hr>
					<span class="card-body"><%= article.body %></span>
				</div>
			</div>
		<% end %>
	</div>

</div>
	