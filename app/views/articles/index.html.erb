<h1>Listado de Articulos</h1>
<p>Find me in app/views/articles/index.html.erb</p>

<div class="p-3">

	<div class="row">
		
		<% @articles.each do |article| %>
			<div class="col-lg-6 col-md-10 mx-auto p-2">
				<div class="card">
					<div class="card-title h3 pl-3 pt-3"><%= link_to article.title, article %></div>
					<hr>
					<span class="card-body"><%= article.body %></span>
				</div>
			</div>
		<% end %>

	</div>
	
</div>
